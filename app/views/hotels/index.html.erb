<div class="list-container">

  <h2>登録済みルーム一覧</h2>

  <table class="list-wrapper">
    <thead>
      <tr class="list-header-wrapper">
        <th>画像</th>
        <th>施設名</th>
        <th>紹介文</th>
        <th>料金</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @hotels.each do |hotel| %>
        <tr>
          <td>
            <% if hotel.room_image.blank? %>
            <p><%= image_tag('/default-image-hotel.png', class: "list-image") %></p>
            <% else %>
            <p><%= image_tag(hotel.room_image.url, class: "list-image") %></p>
            <% end %>
          </td>
          <td>
            <%= link_to hotel.room_name, hotel_path(hotel.id) %>
          </td>
          <td>
            <%= hotel.room_comment %>
          </td>
          <td>
            <%= hotel.unit_price %>
          </td>
          <td>
            <%= hotel.created_at.strftime("%Y/%m/%d") %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
